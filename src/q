<script setup>
import { ref, onMounted } from 'vue'

// reactive state
const count = ref(0) //초기값 셋팅
const name = "IU"


// functions that mutate state and trigger updates
function increment(){
    count.value = count.value +1
   // count.value++ 이렇게 쓰기도 함.
}

// lifecycle hooks
onMounted(() => {
	console.log(`The initial count is ${count.value}.`)
})

// onMounted (() => console.log(`The initial count is ${count.value}.`))
</script>

<template>
    <button @click="increment">Count is: {{ count}}{{name}}</button>
</template>

<style scoped>
button {
    font-weight:bold;
}
</style>
